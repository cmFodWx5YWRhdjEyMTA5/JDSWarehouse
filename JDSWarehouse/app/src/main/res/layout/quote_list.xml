<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:padding="1dp"
    android:layout_height="wrap_content">
    <TableLayout
        android:id="@+id/table"
        android:layout_below="@+id/tv_items"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="5" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView android:id="@+id/tv_no" android:text="Sr.No." android:layout_weight="1" android:textColor="@color/colorBlack" android:layout_width="0dp"></TextView>
            <TextView android:id="@+id/tv_product" android:layout_marginLeft="20dp" android:textColor="@color/colorBlack" android:text="Product" android:layout_weight="1" android:layout_width="0dp"></TextView>
            <TextView android:padding="2dp" android:id="@+id/tv_quatity"  android:layout_marginLeft="20dp" android:gravity="center_horizontal" android:textColor="@color/colorBlack" android:text="1" android:layout_weight="1" android:layout_width="0dp" android:background="@drawable/bt_empty"></TextView>
            <TextView android:padding="2dp" android:id="@+id/tv_scan" android:layout_marginLeft="20dp" android:gravity="center_horizontal" android:textColor="@color/colorWhite" android:text=" Scan " android:layout_weight="1" android:layout_width="0dp" android:background="@drawable/bt_fill_red"></TextView>
            <ImageView android:id="@+id/iv_tick" android:layout_weight="1" android:src="@drawable/tick"></ImageView>
        </TableRow>

    </TableLayout>


</LinearLayout>